{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@libs/shared": ["libs/shared/src"],
      "@libs/shared/*": ["libs/shared/src/*"],
      "@libs/auth": ["libs/auth/src"],
      "@libs/auth/*": ["libs/auth/src/*"],
      "@libs/test": ["libs/test/src"],
      "@libs/test/*": ["libs/test/src/*"]
    }
  }
}
